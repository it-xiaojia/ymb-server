<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="itxj.ymb.mapper.CategoryMapper">
	<resultMap id="categoryMap" type="itxj.ymb.pojo.Category">
		<id property="id" column="category_id"/>
		<result property="name" column="val_name"/>
		<result property="parentCategoryId" column="parent_category_id"/>
		<association property="author"
					 column="create_user_id"
					 select="itxj.ymb.mapper.UserMapper.findUserById"/>
	</resultMap>

	<select id="findCategoryById" resultMap="categoryMap">
		select
		       *
		from
		     ymb_category
		where
		      category_id = #{id}
	</select>
</mapper>
